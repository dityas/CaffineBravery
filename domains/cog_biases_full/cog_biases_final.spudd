(defdd privEscAccDD
    (AttActive
        (yes
            (EscAccounts
                (yes    (AccessLevel' root))
                (no     (SAME AccessLevel))
            )
        )
        (no     (SAME AccessLevel))
    )
)

(defdd connStatusObs
    (AttActive'
        (yes    (ConnStatus' active))
        (no     (ConnStatus' terminated))
    )
)

(defdd hostObsDD
    (HostType'
        (critical
            (HostObs'
                (user_files     (0.99))
                (none           (0.01))
            )
        )

        (honeypot
            (HostObs'
                (user_files     (0.01))
                (none           (0.99))
            )
        )

        (critical_honeypot
            (HostObs'   UNIFORM)
        )
    )
)

