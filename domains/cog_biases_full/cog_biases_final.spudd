        (yes
            (EscAccounts'
                (yes
                    (ActionResult'
                        (success    (0.8))
                        (failure    (0.2))
                    )
                )
                (no
                    (ActionResult'
                        (success    (0.2))
                        (failure    (0.8))
                    )
                )
            )
        )
        (no     (ActionResult' UNIFORM))
    )
)

(defdd fileReconObs
